<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchListImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_menu_gallery"/>
        <TextView
            android:id="@+id/searchListNameView"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:paddingEnd="5dp"
            android:text="PLACEHOLDERNAME"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:id="@+id/searchListButton"
            android:src="@drawable/ic_add_black_24px"
            />
    </LinearLayout>

</LinearLayout>