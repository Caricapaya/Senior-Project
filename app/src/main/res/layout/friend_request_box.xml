<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/friendRequestImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_menu_gallery"/>
        <TextView
            android:id="@+id/friendRuestNameView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical|end"
            android:paddingEnd="15dp"
            android:text="HELLO I'm GUNNAR"/>
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/acceptRequestButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="Accept"
            android:backgroundTint="#64dd17"/>
        <Button
            android:id="@+id/declineRequestButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="10dp"
            android:text="Decline" />
    </LinearLayout>
    


</LinearLayout>