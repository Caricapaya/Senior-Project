<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="240dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/friendListImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:src="@android:drawable/ic_menu_gallery"/>
        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/friendListNameView"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:gravity="center_vertical|start"
                android:paddingEnd="5dp"
                android:text="PLACEHOLDERNAME"/>
            <TextView
                android:id="@+id/friendListAreaView"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="" />
        </LinearLayout>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_fiber_manual_record_black_24px"
            android:id="@+id/friendListOnlineIndicator"
            android:tint="#E52800"/>
    </LinearLayout>

</LinearLayout>